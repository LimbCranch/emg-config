
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EMG Device Configuration",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "sampling_rate_hz": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 4000,
          "description": "EMG sampling frequency"
        }
      },
      "required": ["sampling_rate_hz", "channel_count"]
    }
  }
}